<div class="field">
  <%= f.hidden_field :date, :value => @report.date if controller_name == "reports" %>
  <%= f.hidden_field :date, :value => Date.current if controller_name == "cases" %>
</div>

<div class="field">
  <%= f.label :timeframe, '獲得時間' %>
  <%= f.select :timeframe, Case.timeframes.keys, {class: ""} %>
</div>

<div class="field">
  <%#= f.label :staff_id, '名前' %>
  <%#= f.collection_select :staff_id, @staffs, :id, :name, { prompt: '選択してください' }, { class: 'form-control' } %>
  <%= f.select :staff_id, Staff.all.map { |staff| [staff.name, staff.id] } %>
</div>

<div class="field">
  <%= f.label :point, '点数' %>
  <%= f.number_field :point, max: 1, min: 0, step: "0.1", class:"form-control", placeholder:"", style:"width:60px" %><br>
</div>

<div>
  <%= link_to_remove_association "実績の削除", f, class:"btn btn-danger", style:"margin-top:15px;" %>
</div>